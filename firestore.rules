
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile.
    // Admins can read any user's profile (e.g., to check isAdmin status).
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow get: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // EHCP Documents
    // Admins can create, update, delete any EHCP document.
    // Authenticated users can read an EHCP document if they are an admin OR if the document's 'associatedUserId' matches their own UID.
    match /ehcpDocuments/{docId} {
      allow read: if request.auth != null && 
                     (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true ||
                      resource.data.associatedUserId == request.auth.uid);
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Add other collection rules here, for example:
    // match /otherCollection/{document=**} {
    //   allow read, write: if request.auth != null; // Example: Allow all authenticated users
    // }
  }
}
